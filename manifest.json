{
  "manifest_version": 3,
  "name": "Claude Code Digest",
  "version": "1.1",
  "description": "Daily Claude Code digest with inline video players and audio playback.",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Claude Code Digest"
  },
  "permissions": [
    "storage",
    "tts"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
